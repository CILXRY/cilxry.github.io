---
import Typer from "../components/type.vue";
import Footer from "../components/footer.astro";
import Paragraph from '../components/aParagraph.astro'

// 这里是 Astro 的 frontmatter（可以放变量，现在先空着）
// 我望见她就此昙花一现
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, maximum-scale=1"
    />
    <title>CILXRY 的小站</title>
    <meta name="msvalidate.01" content="ABED576CF44ECC0430ED77ADDC73A0E9" />
    <!-- Clarity tracking code for https://cilxry.github.io/ -->
<script>
    (function(c,l,a,r,i,t,y){
        c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
        t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i+"?ref=bwt";
        y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
    })(window, document, "clarity", "script", "v34cec08ui");
</script>
    <style>
      @keyframes fade-in {
        from {
          opacity: 0;
          transform: translateY(10px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      .animate-fade-in {
        animation: fade-in 0.6s ease-out forwards;
      }
    </style>
  </head>
  <body class="bg-[#dddddd] text-[#2c3e50] font-sans antialiased">
    <main
      class="max-w-3xl mx-auto px-6 py-16 md:py-24 animate-fade-in duration-500"
    >
      <header class="text-right">
        <!-- <a href="http://repo.cilxry.cc">CILXRY的仓库</a> -->
      </header>
      <header class="text-left mb-12">
        <h1
          class="text-4xl md:text-2xl font-bold tracking-tight mb-4 font-mono"
        >
          CILXRY
        </h1>
        <!-- <p class="text-lg text-gray-600 max-w-md">
          这是我的开始。 || Here's a intro for me.
        </p> -->
        <Typer client:load />
      </header>

      <Paragraph />

      <!-- 兴趣/技能 -->
      <section class="mb-12">
        <h2 class="text-2xl font-semibold mb-4">最近在玩</h2>
        <div class="flex flex-wrap gap-2">
          <span class="px-3 py-1 bg-gray-100 rounded-full text-sm"
            >HTML/CSS</span
          >
          <span class="px-3 py-1 bg-gray-100 rounded-full text-sm">Astro</span>
          <span class="px-3 py-1 bg-gray-100 rounded-full text-sm">UnoCSS</span>
          <span class="px-3 py-1 bg-gray-100 rounded-full text-sm"
            >JavaScript</span
          >
        </div>
      </section>

      <Footer />
    </main>
  </body>
</html>
