---
const websiteTitle = "CILXRY 的小站";
import Header from "../layouts/navbar.astro";
import Footer from "../layouts/footer.astro";
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{websiteTitle}</title>
  </head>
  <body
    class="font-sans antialiased max-w-full px-10 py-2 bg-[#dddddd] text-gray-600 dark:bg-gray-900 dark:text-gray-400 animate-fade-in duration-500 text-left"
  >
    <Header />
    <slot />
    <Footer />
  </body>
</html>
<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-fade-in {
    animation: fade-in 0.6s ease-out forwards;
  }
</style>
