---
// 如果温柔是罪。
// Props Here
interface Props {
  websiteTitle?: string;
  doublePanel?: boolean;
}
const {
  websiteTitle = "CILXRY 的小站 ",
  doublePanel: doublePanelShown = false,
} = Astro.props;
// Astro Components and Layouts Here
import NavBar from "../layouts/BaseNavBar.astro";
import Footer from "../layouts/BaseFooter.astro";
// import { ClientRouter } from "astro:transitions";
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, max-scale=1.0"
    />
    <title>{websiteTitle}</title>
    <slot name="InsHeader" />
    <!-- <ClientRouter /> -->
  </head>
  <body
    class="font-sans antialiased max-w-full px-6 md:px-2 py-2 bg-[#dddddd] text-gray-600 dark:bg-gray-900 dark:text-gray-400 animate-fade-in duration-500 text-left"
  >
    <NavBar />
    <main class="max-w-7xl mx-auto px-2 md:px-6 pb-16 md:py-24"><slot /></main>
    {
      doublePanelShown && (
        <main class="max-w-7xl mx-auto px-2 md:px-6 pb-16 md:py-24">
          <slot name="dpsh" />
        </main>
      )
    }
    <!-- <Footer /> -->
  </body>
</html>
<style>
  @font-face {
    font-family: "AiDianFengYaHei";
    src: url("/fonts/AiDianFengYaHei.woff2") format("woff2");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-fade-in {
    animation: fade-in 0.6s ease-out forwards;
  }
  * {
    font-family: "AiDianFengYaHei";
    font-size: 14px;
  }
</style>
