---
interface Props {
  cardData: {
    type?: string;
    slug?: string;
    title: string;
    excerpt?: string;
    date?: string;
    ai_summary?: string;
    description: string;
  };
  gradient?: string;
  link?: string;
}

const { cardData, gradient = "linear-gradient(315deg, #ffbc00, #ff0058)", link } = Astro.props;
---

<div class="box" style={`--glow-gradient: ${gradient}`}>
  <!-- <span></span> -->
  <div class="content w-full">
    <h2 class="text-3xl color-white mb-2">{cardData.title}</h2>
    <p>{cardData.excerpt}</p>
    <p>{cardData.description}</p>
    <a href={link}>Read more</a>
  </div>
</div>

<style scoped>
  .box {
  box-sizing: border-box;
  font-family: consolas;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  padding: 10px 0;
  position: relative;
  display: flex;
  width: 100%;
  /* height: 200px; */
  /* margin-bottom: 120px; */
  transition: 0.5s;
}

.content {
  position: relative;
  left: 0;
  padding: 20px 40px;
  color: #fff;
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10px);
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  border-radius: 8px;
  z-index: 1;
  transition: 0.5s;
}

.content p {
  font-size: 1.1rem;
  margin-bottom: 10px;
  line-height: 1.4rem;
}

.content a {
  display: inline-block;
  font-size: 1.1rem;
  color: #111;
  background: #fff;
  padding: 10px;
  border-radius: 4px;
  text-decoration: none;
  font-weight: 700;
  margin-top: 5px;
  transition: 0.6s;
}

.box:hover .content {
  /* left: -25px; */
  padding: 60px 40px;
}

.content a:hover {
  background-color: #222;
  color: #fff;
  border-radius: 16px;
  box-shadow: 0 2px 15px #222;
}

